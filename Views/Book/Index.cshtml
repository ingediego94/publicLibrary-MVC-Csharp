@model IEnumerable<publicLibrary.Models.Book>

<h1>Books List</h1>


<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                
                @* modify this 'asp-action="Create" for the specific method to creating *@
                <form asp-action="Create">
                    <h5>Adding a new book</h5>

                    @* Book Title *@
                    <div class="mt-3 d-flex flex-column">
                        <label for="Title">Title</label>
                        <input id="Title" type="text" class="form-control" name="Title" required>
                    </div>
                    
                    @* Book Author *@
                    <div class="mt-3 d-flex flex-column">
                        <label for="Author">Author</label>
                        <input id="Author" type="text" class="form-control" name="Author" required>
                    </div>
                    
                    @* Book Genre *@
                    <div class="mt-3 d-flex flex-column">
                        <label for="Genre">Genre</label>
                        <input id="Genre" type="text" class="form-control" name="Genre" required>
                    </div>
                    
                    @* Book Released Date *@
                    <div class="mt-3 d-flex flex-column">
                        <label for="Released">Released Date</label>
                        <input id="Released" type="date" class="form-control" name="Released" required>
                    </div>

                    @* Book Stock *@
                    <div class="mt-3 d-flex flex-column">
                        <label for="Stock">Stock</label>
                        <input id="Stock" type="number" class="form-control" name="Stock" required>
                    </div>

                    @* Book Code *@
                    <div class="mt-3 d-flex flex-column">
                        <label for="Code">Code</label>
                        <input id="Code" type="text" class="form-control" name="Code" required>
                    </div>

                    @* Book PublishingHouse *@
                    <div class="mt-3 d-flex flex-column">
                        <label for="PublishingHouse">Publishing House</label>
                        <input id="PublishingHouse" type="text" class="form-control" name="PublishingHouse"  required>
                    </div>
                    
                    <hr>
                    <button type="submit" class="btn btn-success w-100">Save</button>
                </form>
            </div>
        </div>
    </div>    
    
    
    <div class="col-md-9">
        
        <table class="table table-striped">
            <!--Headers-->
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">TITLE</th>
                    <th scope="col">AUTHOR</th>
                    <th scope="col">GENRE</th>
                    <th scope="col">RELEASED</th>
                    <th scope="col">STOCK</th>
                    <th scope="col">CODE</th>
                    <th scope="col">PUBLISHING HOUSE</th>
                    <th scope="col">ACTIONS</th>
                </tr>
            </thead>
    
            <!--Body-->
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.Genre</td>
                    <td>@item.Released</td>
                    <td>@item.Stock</td>
                    <td>@item.Code</td>
                    <td>@item.PublishingHouse</td>
                    <td class="d-flex flex-row gap-1">
                        <a class="btn btn-primary w-100" asp-action="Details" asp-controller="Book" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-warning w-100" asp-action="Edit" asp-controller="Book" asp-route-id="@item.Id">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" asp-controller="Book" method="post" style="display: inline">
                            @Html.AntiForgeryToken()
                            
                            <button type="submit" 
                                    class="btn btn-danger w-100" 
                                    onclick="return confirm('¿Do you want to delete this book?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
    
        </table>
    </div>
    
</div>