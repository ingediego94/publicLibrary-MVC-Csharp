@model IEnumerable<publicLibrary.Models.Client>

<h1>Clients List</h1>


<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                
                @* modify this 'asp-action="Create" for the specific method to creating *@
                <form asp-action="Create">
                    <h5>Adding a new client</h5>

                    @* Client Name *@
                    <div class="mt-3 d-flex flex-column">
                        <label for="Name">Name</label>
                        <input id="Name" type="text" class="form-control" name="Name" required>
                    </div>

                    @* Client Document number *@
                    <div class="mt-3 d-flex flex-column">
                        <label for="DocumentNumb">Document Number</label>
                        <input id="DocumentNumb" type="number" class="form-control" name="DocumentNumb" required>
                    </div>

                    @* Client Age *@
                    <div class="mt-3 d-flex flex-column">
                        <label for="Age">Age</label>
                        <input id="Age" type="number" class="form-control" name="Age" required>
                    </div>

                    @* Client Email *@
                    <div class="mt-3 d-flex flex-column">
                        <label for="Email">Email</label>
                        <input id="Email" type="text" class="form-control" name="Email" placeholder="yourmail@mail.com" required>
                    </div>

                    @* Client Status *@
                    <div class="mt-3 d-flex flex-column">
                        <label for="Status">Status</label>
                        <input id="Status" type="text" class="form-control" name="Status" placeholder="true/false" required>
                    </div>

                    @* Client Phone *@
                    <div class="mt-3 d-flex flex-column">
                        <label for="Phone">Phone</label>
                        <input id="Phone" type="number" class="form-control" name="Phone" required>
                    </div>

                    <hr>
                    <button type="submit" class="btn btn-success w-100">Save</button>
                </form>
            </div>
        </div>
    </div>    
    
    
    <div class="col-md-9">
        
        <table class="table table-striped">
            <!--Headers-->
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">NAME</th>
                    <th scope="col">DOCUMENT</th>
                    <th scope="col">AGE</th>
                    <th scope="col">EMAIL</th>
                    <th scope="col">STATUS</th>
                    <th scope="col">PHONE</th>
                    <th scope="col">ACTIONS</th>
                </tr>
            </thead>
    
            <!--Body-->
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.DocumentNumb</td>
                    <td>@item.Age</td>
                    <td>@item.Email</td>
                    <td>@item.Status</td>
                    <td>@item.Phone</td>
                    <td class="d-flex flex-row gap-1">
                        <a class="btn btn-primary w-100" asp-action="Details" asp-controller="Client" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-warning w-100" asp-action="Edit" asp-controller="Client" asp-route-id="@item.Id">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" asp-controller="Client" method="post" style="display: inline">
                            @Html.AntiForgeryToken()
                            
                            <button type="submit" 
                                    class="btn btn-danger w-100" 
                                    onclick="return confirm('¿Do you want to delete this client?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
    
        </table>
    </div>
    
</div>