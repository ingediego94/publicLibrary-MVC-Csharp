@model publicLibrary.Models.Client

@{
    ViewData["Title"] = "Client Details";
}

<h1>Details of Client: @Model.Name</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        
        <dt class = "col-sm-2">
            Document
        </dt>
        <dd class = "col-sm-10">
            @Model.DocumentNumb
        </dd>
        
        <dt class = "col-sm-2">
            Age
        </dt>
        <dd class = "col-sm-10">
            @Model.Age
        </dd>

        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Model.Email
        </dd>
        
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Model.Status
        </dd>
        
        <dt class = "col-sm-2">
            Phone
        </dt>
        <dd class = "col-sm-10">
            @Model.Phone
        </dd>
        
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>